<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:mapper类-->
<mapper namespace="com.msj.mapper.DepartmentMapper">

    <resultMap id="department" type="com.msj.entity.Department">
        <id property="sn" column="sn" javaType="String"/>
        <result property="name" column="name" javaType="String"/>
        <result property="address" column="address" javaType="String"/>
    </resultMap>
    <!--id：方法名-->
    <insert id="insertOne" parameterType="com.msj.entity.Department">
        insert into department values (#{sn},#{name},#{address})
    </insert>

    <update id="updateOne" parameterType="com.msj.entity.Department">
        update department set name=#{name},address=#{address} where sn=#{sn}
    </update>

    <delete id="deleteOne" parameterType="String">
        delete from department where sn=#{sn}
    </delete>

    <select id="selectOne" parameterType="String" resultMap="department">
        select * from department where sn=#{sn}
    </select>

    <select id="selectAll" parameterType="com.msj.entity.Department" resultMap="department">
        select * from department
    </select>


</mapper>